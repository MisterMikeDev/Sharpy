{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "allowJs": false,
        "baseUrl": ".",
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": false,
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "dashboard", "package.json", "pnpm-lock.yaml"]
}
